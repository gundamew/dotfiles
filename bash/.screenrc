# ~/.screenrc
#
# Ref:
#   http://napmas.blogspot.tw/2011/09/screenrc.html
#   http://archerworks.blogspot.tw/2010/05/linuxscreenbindkey.html
#   http://cytseng.twbbs.org/?p=26

# Turn off startup message
startup_message off

# Set default encoding
defencoding UTF-8

# Set status bar
#caption always " %{= KY} #%n: %t@%H %{-} %= %{= KR} Load average: %l %{-} %{= KG} %Y-%m-%d %c:%s %{-} "
caption always " %{= ky} #%n: %t@%H %{-} %= %{= kr} Load average: %l %{-} %{= kg} %Y-%m-%d %c:%s %{-} "

# Set tab bar
hardstatus alwayslastline " %-Lw%{= bw} %n%f %t %{-}%+Lw "

# C-a b: Set encoding from UTF-8 to Big5
bind b encoding Big5 UTF-8

# C-a u: Set encoding to UTF-8
bind u encoding UTF-8

# F8: Create a new window
bindkey -k k8 screen

# F9: Kill current window
bindkey -k k9 kill

# Right arrow: Switch to the next window
#bindkey -k kr next

# Left arrow: Switch to the previous window
#bindkey -k kl prev
