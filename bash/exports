export PATH=/usr/local/mysql/bin:$(brew --prefix coreutils)/libexec/gnubin:/usr/local/sbin:/usr/local/bin:$PATH

if [ -z $MANPATH ]; then
    export MANPATH=$(brew --prefix coreutils)/libexec/gnuman:/usr/local/share/man:/usr/share/man
else
    export MANPATH=$(brew --prefix coreutils)/libexec/gnuman:/usr/local/share/man:/usr/share/man:$MANPATH
fi

export HISTTIMEFORMAT='%F %T '
export HISTCONTROL=ignoreboth
export HISTFILE='/dev/null'

export LANG='zh_TW.UTF-8'
export LC_ALL='zh_TW.UTF-8'

export EDITOR='vim'
export SVN_EDITOR='vim'
export GIT_EDITOR='vim'

export GREP_COLORS='fn:ln=33:se=37:mt=1;37;41'

export DATE_ISO8601='+%Y-%m-%d'
export DATETIME_ISO8601='+%Y-%m-%d\ %H:%M:%S'

