alias ..='cd ..'

if [ $(uname -s) == 'Darwin' ]; then
  alias ls='ls -G'
else
  alias ls='ls --color=auto'
fi

alias ll='ls -Fhl'
alias la='ll -A'
alias rm='rm -i'
alias less='less -rXF'
alias grep='ggrep -rnI --exclude=*.{git,svn,min.*} --color=auto'
alias ag='ag -U --ignore=*.{git,svn,min.*} --color-path="1;35" --color-match="1;37;41"'

alias e64=encode64
alias d64=decode64

alias reload=reload_profile
