# Wow
[user]
    name = Bing-Sheng Chen
    useconfigonly = true

# Such aliases
[alias]
    st = status -s
    ci = commit
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(blue bold)<%an>%Creset'
    di = diff
    br = branch

# Very core
[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    pager = diff-highlight | less
[branch]
    autosetuprebase = always
[branch "master"]
    mergeoptions = --no-ff
[commit]
    template = ~/.gitmessage
[pull]
    rebase = true
[rebase]
    autoStash = true
[diff]
    mnemonicprefix = true
    compactionHeuristic = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

# So much color
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
